{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "strict": false,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "cli.ts",
    "index.ts",
    "src/**/*.ts",
    "node shims.d.ts"
  ]
}
